<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="col-12 text-center m-4">
                @if (ViewBag.Message != null)
                {
                    <h3 class="text-black"><strong>@ViewBag.Message</strong></h3>
                    <br />
                }
            </div>
            <a href="/Home/BackApp?orderid=@ViewBag.OrderId" style="text-decoration: none;">
                <div class="btn-lg btn-primary">
                    <div class="col-12 text-center" style="padding:5% 1%;">
                        <h3>
                            <strong class="text-white">Back To O2Fit App</strong>
                        </h3>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
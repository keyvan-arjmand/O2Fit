@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="col-12 text-center">
                @if (ViewBag?.Message != null)
                {
                    <h3 class="text-black"><strong>@ViewBag?.Message</strong></h3>
                }
            </div>
            <div class="col-12 text-center">
                @if (ViewBag?.SaleReferenceId != null)
                {
                    <div class="col-12 text-center">
                        <img src="~/OrderImage/payment-success.gif" />
                    </div>
                    <div class="col-12 text-center">
                        <h4 class="text-black">
                            <strong>
                                کد رهگیری: @ViewBag?.SaleReferenceId
                            </strong>
                        </h4>
                    </div>
                    <br />
                }
                else
                {
                    <div class="col-12 text-center">
                        <img src="~/OrderImage/payment-faild.gif" />
                    </div>
                }
                <a href="/Home/BackApp?orderid=@ViewBag.SaleOrderId"  id="returnBtn" style="text-decoration: none;">
                    <div class="btn-lg btn-primary">
                        <div class="col-12 text-center" style="padding:5% 1%">
                            <h3>
                                <strong class="text-white">
                                    بازگشت به اکسیژن فیت
                                </strong>
                            </h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
    setTimeout(function () {
        /*$("#returnBtn").trigger('click')*/
        //$("#returnBtn").trigger("click");
        //$("#returnBtn").click();
        //alert("dcdjchf");
        window.location.href = $("#returnBtn").attr("href");

    }, 3000);

    </script>

}
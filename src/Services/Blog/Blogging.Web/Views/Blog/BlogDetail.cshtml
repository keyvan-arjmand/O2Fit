            <div class="border-top align-self-center p-1" style="width: 90%">
            </div>
            @{
                foreach (var i in lastBlog)
                {
                    <div class="rounded-3 mt-2  mt-lg-1 text-end text-black " id="card-one" style="padding: 0.5rem">
